{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node21/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "composite": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
